{
  "name": "management",
  "version": "1.0.0",
  "description": "Management application",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charliecooper45/management.git"
  },
  "devDependencies": {
    "bower": "^1.8.0",
    "http-server": "^0.9.0",
    "jasmine-core": "^2.5.2",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-jasmine": "^1.1.0",
    "karma-spec-reporter": "0.0.26"
